@page
@model NotesApp2.Pages.Notes.EditModel
@{
}

<br />

<h2>Redaguoti užrašą</h2>

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Note.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Note.Title">Pavadinimas</label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Title" class="form-control" />
            </div>
            <span asp-validation-for="Note.Title" class="text-danger"></span>

        </div>
        <div class="form-group row mt-4">
            <div class="col-4">
                <label asp-for="Note.Content">Turinys</label>
            </div>
            <div class="col-4">
                <input asp-for="Note.Content" class="form-control" />
            </div>

        </div>
        
        <div class="form-group row mt-4">
            <div class="col-3 offset-4">
                <input type="submit" value="Išsaugoti pakeitimus" class="btn btn-primary" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success">Atgal</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}