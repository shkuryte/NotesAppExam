@using Microsoft.AspNetCore.Identity
@using NotesApp2.Areas.Identity.Data

@inject SignInManager<NotesApp2User> SignInManager
@inject UserManager<NotesApp2User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Labas, @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("Notes/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Atsijungti</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Užsiregistruokite</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Prisijunkite</a>
    </li>
}
</ul>
